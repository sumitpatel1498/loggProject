
@{
    ViewBag.Title = "GroupView";
}


@section HeadContent {
    @Styles.Render("~/Content/Student")
    @Styles.Render("~/Content/css")
}
<br />
<br />
<br />

<div ng-app="studentApp" ng-controller="GroupViewCtrl as sp" ng-cloak>
    <div>

        <table>
            <tr ng-repeat="data in sp.SortByGroup">              
                <th>
                    Project Name:  {{data.ProjectName}}
                    <br />
                    <br />
                    <table class="table table-bordered table-hover table-responsive">                     
                    
                        <tr>
                            <th>
                                <span>Client Id</span>
                            </th>
                            <th>
                                <span>Description</span>
                            </th>
                            <th>
                                <span>Client Name</span>
                            </th>
                            <th>
                                <span>Project</span>
                            </th>
                            <th>
                                <span>Client Email</span>
                            </th>
                            <th>
                                <span>Rate</span>
                            </th>
                            <th>
                                <span>Terms And Condition</span>
                            </th>
                            <th>
                                <span>Special</span>
                            </th>

                        </tr>
                        <tr ng-repeat="data in data.Result">
                            <td>{{data.ClientId}}</td>
                            <td>{{data.Description}}</td>
                            <td>{{data.ClientName}}</td>
                            <td>{{data.Project}}</td>
                            <td>{{data.ClientEmail}}</td>
                            <td>{{data.Rate}}</td>
                            <td>
                                
                                <md-checkbox class="chkbox" ng-model="data.TermsAndService" ng-disabled="true"></md-checkbox>
                            </td>
                            <td>
                                <md-checkbox ng-model="data.special" ng-disabled="true"></md-checkbox>
                            </td>

                        </tr>
                    </table>
                    </tr>
</table>
    </div>







    @section scripts{
        @Scripts.Render("~/bundles/Angular")
        @Scripts.Render("~/bundles/Common")
        @Scripts.Render("~/Bundle/GroupCtrl")
    }
</div>



