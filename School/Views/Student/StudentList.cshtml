
@{
    ViewBag.Title = "StudentList";
}
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/Student.js"></script>
<h2>StudentList</h2>
<div ng-app="myApp">
    <div ng-controller="myCtrl" ng-init="GetAllData()" ng-cloak>
        <table class="table table-hover">
            <tr>
                <th>Student ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Father Name</th>
                <th>Date of Birth</th>
                <th>City</th>
                <th>Address</th>
                <th>Gender</th>
                <th>Pincode</th>
                <th>Course</th>
                <th>Addmission Date</th>
            </tr>
            <tr ng-repeat="std in Student">
                <td>{{std.StudentId}}</td>
                <td>{{std.FirstName}}</td>
                <td>{{std.LastName}}</td>
                <td>{{std.FatherName}}</td>
                <td>{{std.DateOfBirth}}</td>
                <td>{{std.City}}</td>
                <td>{{std.Address}}</td>
                <td>{{std.Gender}}</td>
                <td>{{std.Pincode}}</td>
                <td>{{std.Course}}</td>
                <td>{{std.AddmissionDate}}</td>

                @*<td><md-button md-no-ink class="md-primary" ng-click="">Update</md-button></td>
                    <td><md-button class="md-warn" ng-click="">Delete</md-button></td>*@

                <td>
                    <input type="button" class="btn btn-primary" value="Update" ng-click="Update(std)" />
                    <input type="button" class="btn btn-danger" value="Delete" ng-click="Delete(std)" />
                </td>
            </tr>





        </table>
        <div class="form-horizontal" role="form">
            <div class="container">
                <div class="row">
                    <h2>
                        <span id="spn">Add New Student</span>
                    </h2>
                </div>
                <div class="row">
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">First Name:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputEmail" placeholder="First Name" ng-model="FirstName">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Last Name:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputPassword" placeholder="Last Name" ng-model="LastName">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Father Name:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputLabel3" placeholder="Father Name" ng-model="FatherName">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Date OF Birth:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputEmail" placeholder="Date of Birth" ng-model="DateofBirth">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">City:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputEmail" placeholder="City" ng-model="City">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Address:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputEmail" placeholder="Address" ng-model="Address">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Gender:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputEmail" placeholder="Gender" ng-model="Gender">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">PinCode:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputEmail" placeholder="Pincode" ng-model="PinCode">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Course:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputEmail" placeholder="Course" ng-model="Course">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="form-group">
                            <label class="col-md-4 control-label">AddmissionDate:</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="inputEmail" placeholder="Address" ng-model="AddmissionDate">
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-6 col-lg-4">
                        <input type="button" id="btnSave" class="form-control btn-space btn-primary" value="Submit" ng-click="InsertData()" />
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

